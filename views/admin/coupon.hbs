<div class="content-wrapper">
            <!-- Content -->


                      {{!-- add categorie modal button  --}}

            <div class="container-xxl flex-grow-1 container-p-y">
              {{!-- <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> Room Categories</h4> --}}
              <div class="mt-3 mb-3 ">
                        <!-- Button trigger modal -->
                        <div class="row">
                          <div class="col-4 col-md-2 ">
                            <button
                          type="button"
                          class="btn btn-primary "
                          data-bs-toggle="modal"
                          data-bs-target="#modalCenter"
                        >
                          Add Coupon
                        </button>
                          </div>

                      {{!-- add categorie modal button end --}}


{{!-- error --}}

                        {{#if err}}
                            <div style="margin-left: inherit;" class="alert p-2 col-6 alert-danger alert-dismissible co" role="alert">
                            {{err}}
                            <button  style="padding-bottom:9px ;" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {{/if}}
                        </div>
{{!-- error --}}
      
      <!-- Modal -->
                        <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">Add</h5>
                                <button
                                  type="button"
                                  class="btn-close"
                                  id="closebtn"
                                  data-bs-dismiss="modal"
                                  aria-label="Close"
                                ></button>
                              </div>
                              <div class="modal-body">
                                <form onsubmit="addcoupon(event)" id="addcoupon">
                                <div class="row">
                                  <div class="col mb-3">
                                    <label for="nameWithTitle" class="form-label">Code</label>
                                    <input
                                    required
                                      type="text"
                                      name="code"
                                      id="code"
                                      class="form-control"
                                      placeholder="Code"
                                    />

                                    <label for="nameWithTitle" class="form-label">Valid From</label>
                                    <input
                                    required
                                      type="date"
                                      name="validFrom"
                                      id="validFrom"
                                      class="form-control"
                                      placeholder=""
                                    />

                                    <label for="nameWithTitle" class="form-label">Valid Upto</label>
                                    <input
                                    required
                                      type="date"
                                      name="validUpto"
                                      id="validUpto"
                                      class="form-control"
                                      placeholder=""
                                    />

                                 
                          <label class="pr-2" for="">Discount Type</label>
                          <div class="form-check form-check-inline mt-3">
                            <input
                              class="form-check-input"
                              type="radio"
                              name="type"
                              id="type1"
                              value="Price"
                            />
                            <label class="form-check-label" for="inlineRadio1">Price</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input
                              class="form-check-input"
                              type="radio"
                              name="type"
                              id="type2"
                              value="percentage"
                            />
                            <label class="form-check-label" for="inlineRadio2">Percentage</label>
                          </div>
                          <div>

                            <label for="nameWithTitle" class="form-label">Price or Percentage</label>
                                    <input
                                    required
                                      type="number"
                                      name="amount"
                                      id="amount"
                                      class="form-control"
                                      placeholder=""
                                    />

                           <label for="nameWithTitle" class="form-label">Description</label>
                                    <input
                                    
                                      type="text"
                                      name="description"
                                      id="description"
                                      class="form-control"
                                      placeholder="Code"
                                    />
        
                       
                          </div>
                                  </div>
                                </div>
                                
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                  Close
                                </button>
                                <button  type="submit" class="btn btn-primary">Save changes</button>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      </form>

                      
{{!-- add categoty modal end --}}
              
              
              <!-- Accordion -->

              {{!-- <h5 class="mt-4">{{this.size}}</h5> --}}
              <div id="cardtable" class="card p-5">
                {{!-- <h5 class="card-header">Rooms</h5> --}}
                <div class="table-responsive text-nowrap">
                  <table id="myTable" class="table  ">
                    <thead>
                      <tr>
                        <th>Code</th>
                        <th class="text">Valid From</th>
                        <th class="text">Valid Upto</th>
                        <th>Discount Type</th>
                        <th>Discount</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                {{#each coupons}}
                      <tr>
                        <td><strong>{{this.code}}</strong></td>
                        <p id="room" > </p>
                        <td class="text-success"><strong>{{this.validFrom}}</strong></td>
                        <td class="text-danger"><strong>{{this.validUpto}}</strong></td>
                        <td class=""><strong>{{this.type}}</strong></td>
                        <td class=""><strong>{{this.amount}}</strong></td>
                        {{!-- <td class=""><strong>{{this.code}}</strong></td> --}}
                      

                        
                        <td>
                            <div class="col-lg-4 col-md-6">
                      <div class="mt-auto">


                        <button type="button" class="btn btn-sm btn-danger mb-0" id="deleteBtn" data-toggle="modal" data-target="#exampleModalCenter{{this._id}}">
                                X
                          </button>





<!-- Modal -->
<div class="modal fade" id="exampleModalCenter{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete Coupon</h5>
        <p id="textj"></p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       Are You Sure? Do you want to delete {{this.code}}
      </div>
      <div class="modal-footer">
        <button type="button" id="cancelbtn" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button onclick="deleteCoupon('{{this._id}}')" type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>
                      </div>
                    </div>
                        </td>
                      </tr>
            {{/each}}
                      
                    </tbody>
                  </table>
                </div>
              </div>

              <script>
   
                  $(document).ready(function () {
                    $("#addcoupon").validate({
                      rules: {
                          code: {
                              required: true
                              
                          },
                          validFrom: {
                              required: true     
                          },
                          validUpto : {
                            required : true
                          },
                          type : {
                              required : true
                          },
                          description : {
                              required : true
                          },
                          amount : {
                            required : true
                          }
                      },
                      messages: {
                          code: {
                              required: "This Field is Mandatory"
                            
                          },
                          validFrom: {
                              required: "This Field is Mandatory"
                          },
                          validUpto: {
                            required : 'This Field is Mandatory'
                          },
                          type : {
                              required : 'This Field is Mandatory'
                          },
                          description : {
                              required : 'This Field is Mandatory'
                          },
                          amount : {
                            required : 'This Field is Mandatory'
                          }
                      }
                  }); 
                  })

                
              
                  
                    function addcoupon(e){
                        e.preventDefault()
                  
                        if ($("#addcoupon").valid()) {
                        $.ajax({
                        url : '/admin/add-coupon',
                        method : 'post',
                        data : $('form').serialize(),
                        success : (response)=>{
                            if(response.success){
                              document.getElementById('closebtn').click()
                              $("#myTable").load(location.href + " #myTable");
                                swal({
                                    title: "Coupon Added!",
                                    text: "New Coupon has added Successfully",
                                    icon: "success",
                                    button: "OK",
                                    });
                            }else{
                              document.getElementById('closebtn').click()
                              swal({
                                    title: "Cant add Coupon",
                                    text: response.message,
                                    icon: "error",
                                    button: "OK",
                                    });
                            }
                        }
                    })
                            }
                    }

                      $(document).ready( function () {
    $('#myTable').DataTable();
} );
                  
                  function deleteCoupon(id){
                    $.ajax({
                      url : '/admin/delete-coupon',
                      data : {
                        id : id
                      },
                      method : 'post',
                      success : (response)=>{
                        document.getElementById('cancelbtn').click()
                       $("#myTable").load(location.href + " #myTable");

                         
                      }
                    })
                  }
   
              </script>

