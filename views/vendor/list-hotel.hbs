<script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/cleave.min.js"></script>


<div class="row mt-5">
      <div class="col-12 col-md-8 mx-auto">
        <div class="card mb-4">
          <div
            class="card-header d-flex justify-content-between align-items-center"
          >
            <h5 class="mb-0">Enter Hotel Details</h5>

          </div>
          <div class="card-body">
            <form
            enctype="multipart/form-data"
              id="add-hotel"
              method="post"
              action="/vendor/list-hotel"
              class="col-10 mx-auto"
            >

            <input type="hidden" value="{{id}}" name="vendorId">

              <div class="mb-3">
                <label class="form-label" for="basic-default-fullname">Hotel
                  Name</label>
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  id="name"
                  placeholder="Name"
                />
              </div>
              <div class="mb-3">
                <label
                  class="form-label"
                  for="basic-default-company"
                >City</label>
                <input
                  type="text"
                  name="city"
                  class="form-control"
                  id="city"
                  placeholder="city"
                />
              </div>
              <div class="mb-3">
                <label
                  class="form-label"
                  for="basic-default-message"
                >Adress</label>
                <textarea
                  id="Adress"
                  class="form-control"
                  name="adress"
                  placeholder="Enter Hotel Location"
                ></textarea>
              </div>

              <div class="mb-3">
                <label class="form-label" for="basic-default-phone">Phone No</label>
                <input
                  type="text"
                  id="phone"
                  name="phone"
                  class="form-control phone-mask"
                  placeholder="658 799 8941"
                />
              </div>
              <div class="mb-3">
                <label class="form-label" for="basic-default-message">Hotel
                  Description</label>
                <textarea
                  id="description"
                  class="form-control"
                  name="description"
                  placeholder="Enter Hotel description"
                ></textarea>
              </div>

               <div class="mb-3">
                        <label for="formFileMultiple" class="form-label">Upload a Hotel Image</label>
                        <input name="image" class="form-control" type="file" id="formFileMultiple" multiple />
                      </div>

                       <div class="mb-3 row">
                        <label for="html5-time-input" class="col-md-2 col-form-label">Check In</label>
                        <div class="col-md-10">
                          <input class="form-control" type="time" name="checkIn" value="12:30:00" id="html5-time-input" />
                        </div>
                      </div>
                       <div class="mb-3 row">
                        <label for="html5-time-input" class="col-md-2 col-form-label">Check Out</label>
                        <div class="col-md-10">
                          <input class="form-control" name="checkOut" type="time" value="12:30:00" id="html5-time-input" />
                        </div>
                      </div>
           
              
              <button type="submit" class="btn btn-primary">Send</button>
            </form>
          </div>
        </div>
      </div>

    </div>

    <script>
  var cleave = new Cleave('.phone-mask', {
    phone: true,
    phoneRegionCode: '{IN}'
});
</script>