$('#pass').validate({
    rules : {
        currentpw : {
            required : true,
            minlength : 8
        },
        password : {
            required : true,
            minlength : 8
        },
        ConfirmPassword : {
            required : true,
            minlength : 8,
            equalTo : '#password'
        }
    }
})


function editUser(e){
                        e.preventDefault()
                  
                        if ($("#editUser").valid()) {
                        $.ajax({
                        url : 'update-user',
                        method : 'post',
                        data : $('form').serialize(),
                        success : (response)=>{
                            if(response.success){
                              document.getElementById('closebtn').click()
                              $("#container").load(location.href + " #container");
                                swal({
                                    title: "Updated!",
                                    text: "Details have been successfully updated",
                                    icon: "success",
                                    button: "OK",
                                    });
                            }else{
                              document.getElementById('closebtnp').click()
                              swal({
                                    title: "Cant update details",
                                    text: 'Please Try again',
                                    icon: "error",
                                    button: "OK",
                                    });
                            }
                        }
                    })
                            }
                    }
    function changePass(e){
        e.preventDefault()
                  
                        if ($("#pass").valid()) {
                        $.ajax({
                        url : 'change-password',
                        method : 'post',
                        data : $('#pass').serialize(),
                        success : (response)=>{
