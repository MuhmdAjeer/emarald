<div class="container mt-5 pt-5">

  {{! image seciton }}
  {{!-- {{#each hotels}} --}}
  {{#if bookings}}
    <table style="border-radius: 10px; padding: 50px; box-shadow: 0px 0px 10px #a7a7a72e;"  id="table1" class="table table-hover table">
      <thead>
        <tr>

          {{! <th scope="col">#</th> }}
          <th>Hotel</th>
          <th>Type</th>
          <th>Rooms</th>
          <th>Check-in</th>
          <th>Check-out</th>
          <th>booked on</th>
          <th>Price</th>
          <th>Details</th>


        </tr>
      </thead>
      <tbody>
        {{#each bookings}}


        {{#each this.hoteldetails}}
          <tr>
            <td class="pt-4 text-dark"><a href="/hotel/{{_id}}"><strong>{{name}}</strong></a></td>
          {{/each}}
        {{#each this.roomdetails}}
            <td class="pt-4">{{category}}</td>
        {{/each}}
            <td class="pt-4">{{this.rooms}}</td>
            <td class="pt-4">{{this.checkin}}</td>
            <td class="pt-4">{{this.checkout}}</td>
            <td class="pt-4">{{dayTime this.bookedTime}}</td>
            <td class="pt-4 text-success"><strong>&#8377;{{this.grandTotal}}</strong></td>



            <td class="pt-4">
              <div class="d-flex">
                <div class="">
                  <a href="/booking-confirmation/{{_id}}">
                    <button class="btn btn-success btn-sm">View Booking</button>
                  </a>
                </div>

              </div>
            </td>
          </tr>
        {{!-- {{/each}} --}}
        {{/each}}

      </tbody>
    </table>
  {{else}}
    <h1 class="mt-5 pt-5 mb-4 pb-5" style="font-weight: 900;">Nothing in bookings!</h1>
  {{/if}}
  {{!-- {{/each}} --}}
</div>
