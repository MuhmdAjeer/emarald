<script>
        $(document).ready(function () {
            $("#form1").validate({
                rules: {
                    username: {
                        required: true
                        
                    },
                    password: {
                        required: true,
                        minlength: 8
                    }
                },
                messages: {
                    username: {
                        required: "This Field is Mandatory"
                      
                    },
                    password: {
                        required: "This Field is Mandatory",
                        minlength: "Password Must be Minimum 8 Characters Long"
                    },
                }
            });
        })
    </script>
<main class="d-flex justify-items-center align-items-center min-vh-100 py-3 py-md-0 col-9 mx-auto">
    <div class="container">
      <div class="card login-card">
        <div class="row no-gutters">
          <div class="col-md-5">
            <img src="/images/login1.jpg" alt="login" class="login-card-img">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <div class="app-brand mb-0">
                <h1 class="emarald-logo" >Emarald</h1>
                
              </div>
              <style>
                .emarald-logo{
                    font-family: 'Alex Brush', cursive;
                    color: #314192;
                    font-size: 2.5rem;
                    font-weight: bold
                }
              </style>
              {{!-- <div class="brand-wrapper">
                <img src="/images/logo.svg" alt="logo" class="logo">
              </div> --}}
              <p class="login-card-description">User Login</p>
                {{#if response}}
              <p style="color: red ;">{{response.message}}</p>
                {{/if }}


              <form id="form1" action="/login" method="post">
                  <div class="form-group">
                    <label for="id" class="sr-only">Username</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="username">
                  </div>
                  <div class="form-group mb-4">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="***********">
                  </div>
                  {{!-- <button name="login" id="login" class="btn btn-block login-btn mb-4" type="submit value="Login" > Login </button> --}}
                  <button type="submit" class="btn btn-block login-btn mb-4">Login</button>
                </form>
                {{!-- <a href="#!" class="forgot-password-link">Forgot password?</a> --}}
                {{!-- <p class="login-card-footer-text">Don't have an account? <a href="#!" class="text-reset">Register here</a></p> --}}
                <nav class="login-card-footer-nav">
                  <a href="/signup">Dont have an account? , Signup</a>
                </nav>
                
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </main>

